<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fancyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.example.dingusagar.brutecall.MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/setNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_weight="12"
            android:ems="10"
            android:textSize="25sp"
            android:hint="Type Number Here"
            android:inputType="phone" />




    </LinearLayout>

    <EditText
        android:id="@+id/setNoOfCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textSize="25sp"
        android:hint="How many calls ?"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonCall"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CALL" />

        <Button
            android:id="@+id/bcancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL" />

        <Button
            android:id="@+id/phoneBookButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="PHONE BOOK" />

    </LinearLayout>





    <TextView
        android:id="@+id/xCallsCalled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:text="Called 0 times"
        android:textSize="40dp"
        android:layout_below="@+id/setNoOfCalls"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/secondaryInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="86dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="14dp"
        android:text=""
        android:layout_below="@+id/xCallsCalled"
        android:layout_alignLeft="@+id/xCallsCalled"
        android:layout_alignStart="@+id/xCallsCalled" />

</RelativeLayout>
